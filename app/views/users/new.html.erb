<%= form_for @user do |form| %>

  <% if @user.errors.any? %>
    <%= pluralize(@user.errors.count, "error") %> prevented your account from being created:
    <ul>
      <% @user.errors.full_messages.each do |error_message| %>
        <li><%= error_message %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :area %>
    <%= form.collection_select(:area_id, @areas, :id, :name,
      {include_blank: "Select your geographic area"}) %>
  </div>
  <p>Optional Personal Information:</p>

  <div>
    <%= form.label :age %>
    <%= form.text_field :age %>
  </div>
  <div>
    <%= form.label :avatar_url, "Profile Picture" %>
    <%= form.text_field :avatar_url %>
  </div>
  <div>
    <%= form.label :bike %>
    <%= form.text_field :bike %>
  </div>
  <div>
    <%= form.submit "Sign up" %>
  </div>
<% end %>
